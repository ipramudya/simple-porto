---
import { DataSkills } from '@/lib/constant'
import Badge from '../Badge.astro'
import Section from '../templates/Section.astro'
---

<Section>
    <div class="flex flex-col space-y-1">
        <h2 class="text-lg font-semibold md:text-xl">Technical Skills</h2>
        <p class="text-sm md:text-base">Here are some of the technologies I frequently utilize and familiar with:</p>
    </div>

    <div class="flex flex-wrap items-center gap-2">
        {DataSkills.map((skill) => <Badge label={skill} />)}
    </div>
</Section>
