---
import { DataWorkingExperience } from '@/lib/constant'
import DashedContent from '../DashedContent.astro'
---

<section class="flex flex-col space-y-4 py-[2rem]">
    <h2 class="text-xl font-semibold">Working Experience</h2>

    <div class="flex flex-col space-y-4">
        {
            DataWorkingExperience.map((data) => (
                <DashedContent label={data.label} subLabel={data.sub} rightContent={data.rightContent} />
            ))
        }
    </div>
</section>
