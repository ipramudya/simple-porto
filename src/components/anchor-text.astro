---
interface Props {
    href: string
    label: string
    isExternal?: boolean
}

const { href, label, isExternal = true } = Astro.props

const externalAnchorProps = isExternal
    ? {
          target: "_blank",
          rel: "noopener noreferrer",
      }
    : {}
---

<a {href} {...externalAnchorProps} class="!font-semibold transition duration-300">
    {label.trim()}
</a>
