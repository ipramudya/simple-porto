---
interface Props {
    content: string
    date: string
    company?: string
}

const { content, date, company = "" } = Astro.props
---

<div class="relative w-full">
    <div class="border-x-0 border-b-0 border-t border-dashed border-dark-5"></div>
    <div
        class="absolute left-0 top-0 flex -translate-y-1/2 items-center justify-center rounded-md bg-dark-12 pr-2"
    >
        <p class="flex items-center space-x-1">
            <span>
                {content}
            </span>

            {
                company && (
                    <>
                        <span class="hidden text-dark-4 md:inline">&#8226;</span>
                        <span class="hidden text-sm text-dark-2 md:inline">{company}</span>
                    </>
                )
            }
        </p>
    </div>
    <div
        class="absolute right-0 top-0 flex -translate-y-1/2 items-center justify-center rounded-md bg-dark-12 pl-1"
    >
        <span class="text-sm text-dark-2">
            {date}
        </span>
    </div>
</div>
