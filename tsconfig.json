{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "types": ["@astrojs/image/client"],
        "importsNotUsedAsValues": "error",
        "plugins": [
            {
                "name": "@astrojs/ts-plugin"
            }
        ],
        "baseUrl": "./src",
        "paths": {
            "@components/*": ["./components/*"],
            "@layouts/*": ["./layouts/*"],
            "@functions/*": ["./functions/*"]
        }
    }
}
